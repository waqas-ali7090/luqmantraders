<!--Contact section-->
<section id="contact-section">
    <div class="wrap-pad">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 " data-scrollreveal="enter top and move 100px, wait 0.5s">
                <div class="text-center">
                    <h1>
                        <i class="fa fa-tint small-icons bk-color-black"></i>Contact us Now
                    </h1>
                    <p class="lead">
                        Contact us now, we will respond you within an hour.
                    </p>
                </div>
            </div>
            <!-- ./ Heading div-->
            <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1  margin-top-20">
                <div class="col-md-6 col-sm-12" data-scrollreveal="enter left and move 100px, wait 0.4s">
                    <h3>
                        <i class="fa fa-pencil small-icons bk-color-light-blue"></i>Send Us Your Query
                    </h3>
                    <hr />
                    @using (Html.BeginForm("SendEmail", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                    <div class="row">
                        <div class="col-md-5 col-sm-5 margin-5">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.MailModel.Name, new { @class = "form-control", required = "required", placeholder = "Name" })
                            </div>
                        </div>

                        <div class="col-md-5 col-sm-5 margin-5">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.MailModel.From, new { @class = "form-control", type = "email", required = "required", placeholder = "Email Address" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="form-group">
                                @Html.TextAreaFor(m => m.MailModel.Body, new { @class = "form-control", required = "required", placeholder = "Message" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-lg">Submit Query</button>
                            </div>
                        </div>
                    </div>
                    }
                </div>
                <div class="col-md-4 col-sm-12" data-scrollreveal="enter right and move 100px, wait 0.4s">
                    <div class="col-md-12 col-sm-6">
                        <h3>
                            <i class="fa fa-comments small-icons bk-color-red"></i>Reach Us Here
                        </h3>
