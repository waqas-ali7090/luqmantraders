<!--PORTFOLIO SECTION -->
<section id="portfolio-section">
    <div class="wrap-pad">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 " data-scrollreveal="enter top and move 100px, wait 0.5s">
                <div class="text-center">
                    <h1>
                        <i class="fa fa-star-o small-icons bk-color-light-blue"></i>Products
                    </h1>
                    <p class="lead">
                        These are the products available for our customers, get your deal now. We are not limited to only these products,
                        We can provide products, according to your desire.
                    </p>
                </div>
            </div>
            <!-- ./ Heading div-->

            <div class="col-md-10 col-md-offset-1 col-sm-offset-1 col-sm-10 col-xs-10 col-xs-offset-1" data-scrollreveal="enter right and move 100px, wait 0.4s">
                @foreach (var category in Model.ItemCategories)
                {
                    if (category.Items.Count != 0)
                    {
                        <h4 class="text-uppercase">@category.Name :</h4>
                        <ul class="portfolio-items" style="display: inline-block">
                            @foreach (var item in category.Items)
                            {
                                <li class="portfolio-item ">
                                    <div class="item-main">
                                        <div class="portfolio-image">
                                            <img src="@Url.Content(item.Photo)" alt="Loading Image" style="width: 240px; height: 245px"/>
                                            <div class="overlay">
                                                <a class="preview btn btn-primary" title="@item.Description" href="@Url.Content(item.Photo)" rel="prettyPhoto[gallery1]"><i class="fa fa-eye"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                }
            </div>
            <!-- ./ Content div-->
        </div>
    </div>
</section>
<!--PORTFOLIO SECTION -->
