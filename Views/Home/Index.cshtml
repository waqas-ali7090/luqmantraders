                        <i class="fa fa-pencil small-icons bk-color-light-blue"></i>Send Us Your Query
                    </h3>
                    <hr />
                    @using (Html.BeginForm("SendEmail", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                    <div class="row">
                        <div class="col-md-5 col-sm-5 margin-5">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.MailModel.Name, new { @class = "form-control", required = "required", placeholder = "Name" })
                            </div>
                        </div>

                        <div class="col-md-5 col-sm-5 margin-5">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.MailModel.From, new { @class = "form-control", type = "email", required = "required", placeholder = "Email Address" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="form-group">
                                @Html.TextAreaFor(m => m.MailModel.Body, new { @class = "form-control", required = "required", placeholder = "Message" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-lg">Submit Query</button>
                            </div>
                        </div>
                    </div>
