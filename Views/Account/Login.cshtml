@using (@Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="well well-sm sitefont">
            <br />
            <br />
            @Html.ValidationSummary(true)
            <div class="row text-center">

                <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4" data-scrollreveal="enter left and move 100px, wait 0.6s">
                    <div class="text-left">
                        @Html.LabelFor(m => m.UserName, "Email")
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "color-red" })
                    </div>
                </div>

                <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4" data-scrollreveal="enter left and move 100px, wait 0.6s">
                    <div class="text-left">
                        @Html.LabelFor(m => m.Password)
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "color-red" })
                    </div>
                </div>

                <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4" data-scrollreveal="enter right and move 100px, wait 0.6s">
                    <div class="pull-right">
                        <button type="submit" class="btn btn-info" style="margin-top: 17px">Login</button>
                    </div>
                </div>

                <br />
            </div>
        </div>
    </div>
}